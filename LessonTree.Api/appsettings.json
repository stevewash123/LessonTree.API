{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LessonTree.db"
  },
  "Jwt": {
    "Issuer": "LessonTreeIssuer",
    "Audience": "LessonTreeAudience",
    "Key": "ThisIsASecretSecretKeyThatIsAtLeast40CharactersLongForSecurity",
    "LifetimeMinutes": 120
  },
  "Cors": {
    "Origins": [ "http://localhost:4200", "https://localhost:4200", "https://localhost:7238" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Serilog": {
      "MinimumLevel": "Debug",
      "WriteTo": [
        {
          "Name": "Console"
        },
        {
          "Name": "File",
          "Args": {
            "path": "logs/app.log",
            "shared": true,
            "fileSizeLimitBytes": null,
            "rollOnFileSizeLimit": false,
            "retainedFileCountLimit": null
          }
        }
      ]
    }
  },
  "AllowedHosts": "*",
  "HealthChecks": {
    "Endpoint": "/health",
    "Checks": [
      {
        "Name": "self",
        "Status": "Healthy",
        "Description": "API is running"
      },
      {
        "Name": "sqlite-db",
        "Type": "DbContext",
        "FailureStatus": "Unhealthy"
      }
    ],
    "ResponseFormat": "application/json",
    "IncludeDescription": true,
    "IncludeDuration": true,
    "IncludeStackTrace": true
  }
}